<div class="row">
  <div class="col-md-12">
    <div id="map-outer" class="col-md-12">
      <div id="address" class="col-md-4">
        <h2><%= t :CUGroup%></h2>
        <address>
          <strong><%= raw t('footerCQ.Address') %></strong><br>
          <%= t 'footerCQ.ZipCodeAndArea' %><br>
          <%= t 'footerCQ.CityAndCountry' %><br>
          <%= t'footerCQ.TelfNumber'%><br>
          <%= t 'footerCQ.mailto'%>
        </address>
      </div>
      <div id="map-container" class="col-md-8">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2992.4646042667414!2d2.177129!3d41.407432199999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a4a2dba66dbaa5%3A0x400d572aae1ce70b!2sCOSMiC+WARS!5e0!3m2!1sen!2ses!4v1449080492011" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
      </div>
    </div><!-- /map-outer -->
  </div>
</div> <!-- /row -->

<div class="row">

  <%= form_for @contact, :url => contacts_path, :html => { :novalidate => '', :class => 'form-horizontal'} do |f| %>
      <div class="col-md-12" id="name_email">
        <div class="col-md-6 input-group pull-left" id="name">
          <span class="input-group-addon">
            <i class="fa fa-user"></i>
          </span>
          <%= f.text_field :name, class: 'form-control required',:id =>  "name", :placeholder => Spree.t(:name)  %>
        </div>
        <div class="col-md-6  input-group pull-right" id="email">
          <span class="input-group-addon">
            <i class="fa fa-envelope"></i>
          </span>
          <%= f.email_field :email, class: 'form-control required', :id => "email", :placeholder => t(:email_address) %>
        </div>
      </div>
      <div class="col-md-12 col-xs-12" id="comments">
        <div class="col-md-12 input-group">
              <span class="input-group-addon">
                <i class="fa fa-pencil"></i>
              </span>
          <%= f.text_area :message, class: 'form-control required', :rows => "6", :id => "comments_area", :placeholder => t(:your_comment_here) %>
        </div>
      </div>
      <div class="col-md-12 col-xs-12">
				<%= recaptcha_tags %>
      </div>
      <div class="col-md-12 col-xs-12">
        <div class="col-md-12 input-group">
          <label class="checkbox required micro" id="label_contact_term_and_cond" for="contact_term_and_cond" required>
            <input type="checkbox" id="contact_term_and_cond" name="contact[term_and_cond]" required="required" value="1" />
            <%= t(:contact_term_and_cond) %>
          </label>
        </div>
      </div>
      <div class="col-md-12 col-xs-12">
        <%= f.submit Spree.t(:submit), :alt => Spree.t(:submit), :class => 'btn btn-primary btn-lg', :id => 'contact_us_contact_submit', :title => Spree.t(:submit) %>
      </div>
  <% end %>
  <% if I18n.locale != :en %>
      <% content_for :head do %>
          <script src="<%= assets_prefix %>/jquery.validate/localization/messages_<%= I18n.locale.to_s.downcase.gsub("-", "") %>.js"></script>
      <% end %>
  <% end %>  
</div>

